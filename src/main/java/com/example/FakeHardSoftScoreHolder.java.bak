package com.example;

import org.kie.api.runtime.rule.RuleContext;
import org.optaplanner.core.api.score.buildin.hardsoft.HardSoftScore;

/** Minimal fake holder to avoid NPE in dev tests (not for production solving). */
public class FakeHardSoftScoreHolder {

    private int hard = 0;
    private int soft = 0;

    public void addHardConstraintMatch(RuleContext kcontext, int score) {
        hard += score;
    }

    public void addSoftConstraintMatch(RuleContext kcontext, int score) {
        soft += score;
    }

    public HardSoftScore extractScore() {
        return HardSoftScore.of(hard, soft);
    }
}
